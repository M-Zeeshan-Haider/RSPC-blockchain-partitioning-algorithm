
# Description:
#   Builds an image with the Sawtooth PBFT Engine package installed from
#   the nightly Sawtooth Package Repository.
#
# Build:
#   $ cd sawtooth-pbft/ci/nightly
#   $ docker build . -f sawtooth-pbft-engine -t sawtooth-pbft-engine
#
# Run:
#   $ docker run sawtooth-pbft-engine

FROM ubuntu:bionic

LABEL "install-type"="repo"

RUN apt-get update \
  && apt-get install gnupg -y

RUN echo "deb [arch=amd64] http://repo.sawtooth.me/ubuntu/nightly bionic universe" >> /etc/apt/sources.list \
 && (apt-key adv --keyserver hkp://keyserver.ubuntu.com:80 --recv-keys 44FC67F19B2466EA \
 || apt-key adv --keyserver hkp://p80.pool.sks-keyservers.net:80 --recv-keys 44FC67F19B2466EA) \
 && apt-get update \
 && apt-get install -y -q \
    sawtooth-pbft-engine \
 && apt-get clean \
 && rm -rf /var/lib/apt/lists/*


CMD ["pbft-engine", "-C", "tcp://validator:5050"]
